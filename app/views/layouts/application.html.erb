            <li class="piepad"><%= image_tag("ptplogo.png", :size => "100x100")%></li>
            <% if user_signed_in? %>
            <li><a href="users/sign_in">FIND A RECIPE</a></li>
            <li><a href="users/sign_in">SUBMIT A RECIPE</a></li>
            <li><a href="users/sign_out"><span class="signinup">SIGN OUT</a></li></span>
            <li>
            <% else %>
            <li><a href="#">HOW IT WORKS</a></li>
            <li><a href="users/sign_in">RECIPES</a></li>
            <li><a href="users/sign_in"><span class="signinup">LOGIN</a></li></span>
            <li><a href="users/sign_in">SIGN UP</a></li>
            <% end %>
        </ul>
    </section>
</nav>
</div>
</div>
</div>

    <%= yield %>
    <%= javascript_include_tag "application" %>
  </body>
</html>