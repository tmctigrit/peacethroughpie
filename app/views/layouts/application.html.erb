    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
<!-- Nav Wrap -->
<div class="fixed">
<div class="large-12 large-centered columns navvy">
<nav class="top-bar">
    <!-- The Section wrap -->
