<div class="12-large 12-centered columns findhero">
  <p id="notice"><%= notice %></p>
<br>
<br>
<br>
<br>
<br>
<center>
<br>
<br>

<table>
  <thead>
    <tr class="youreventstext">
      <th>Name</th>
      <th>Date</th>
      <th>Time</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date.strftime("%b %d, %Y") %></td>
        <td><%= event.time.strftime("%I:%M %p") %></td>
        <td><%= event.description %></td>
        <td class="youreventstext"><%= link_to 'Show', event %></td>
         <% if current_user.id == event.planner_id %>
        <td class="youreventstext"><%= link_to 'Edit', edit_event_path(event) %></td>
        <td class="youreventstext"><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td class="youreventstext"><%= link_to 'Rsvp', new_event_rsvp_path(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</center>
<br>
<center>
<%= link_to 'New Event', new_event_path %>
</center>
</div>
