<div class="large-3 large-centered columns welcometext">
Welcome, <%= current_user.name %>!<br>
<% @current_user.events %>

</div>
<div class="large-10 large-centered columns welcometext">
<div class="eventshosting">
  <center>
  <table>
    <thead>
       <tr>
        <th colspan="4" class="youreventstext"><center>EVENTS HOSTING</center></th>
       </tr>
      <tr>
        <th>Event Name</th>
        <th>Date</th>
        <th>Time</th>
        <th># RSVPed</th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.date.strftime("%b %d, %Y") %></td>
          <td><%= event.time.strftime("%I:%M %p") %></td>
          <td><%= event.guest_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</center>

</div>

<div class="eventsattending">
